<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>テスト</title>
  <script>
    window.onload = function () {
      const tweets = [
        "テスト１　私の推しです。\nhttps://x.com/RAKUSTAofficial/status/1939945575539208662/photo/1",
        "テスト２私の推しです。\nhttps://x.com/RAKUSTAofficial/status/1939920699910656340",
        "テスト３私の推しです。\nhttps://x.com/RAKUSTAofficial/status/1939920647624564762/photo/1"
      ];

      // シャッフル関数で順番をランダムに
      function shuffle(array) {
        for (let i = array.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [array[i], array[j]] = [array[j], array[i]];
        }
        return array;
      }

      const shuffled = shuffle([...tweets]);
      const randomText = shuffled[0];

      const encodedText = encodeURIComponent(randomText);
      window.location.href = "https://twitter.com/intent/tweet?text=" + encodedText;
    };
  </script>
</head>
<body>
  <p>推し準備中...</p>
</body>
</html>
